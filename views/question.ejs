<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ./head %>

    <!-- <script src="/scripts/typedjs.js"></script> -->

    <title><%- title %></title>
    <style>
      body {
        background-size: cover;
        
        /* background-color: #3c0b96; */
        background-image: linear-gradient(to right, #3c0b96, #ae95db, #3c0b96);
      }
      img {
        max-width: 100%;
        max-height: auto;
      }

      ul {
        columns: 2;
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Bluffmaster</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                  <a class="nav-link" href="#" style="color: green"><%= participant %></a>
                </li>
            <% if(isBluff) { %>
            <li>
                <a class="nav-link" href="#" style="color: red">ðŸ‘º You're the Bluffmaster ðŸ‘º</a>
              
            </li>
            <% }%>
            <!-- <li class="nav-item">
              <a class="nav-link" href="/scoreboard">scoreboard</a>
            </li> -->
            <% if(letVotingHappen) { %>
            <li class="nav-item">
              <a
                class="nav-link"
                href="#vote-section"
                id="unhide-vote"
                style="color: goldenrod"
                >Vote!</a
              >
            </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/participants/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <div class="container" align="center">
      <% if(isRemoved){ %>
        <div
        class="card"
        style="margin-top: 20%;background-color: #280763;color:whitesmoke;border-color: antiquewhite;border-radius: 100px;border-width:thick"
      >
        <p><h3>Sorry, you are no longer in the game!</h3></p>
      </div>
      <div style="height:400px; width:100%; clear:both;"></div>
      <% } else if(question) { %>
      <div
        class="card"
        style="margin-top: 2%;background-color: #280763;color:whitesmoke;border-color: antiquewhite;border-radius: 100px;border-width:thick"
      >
        <div class="card-body">
          <p>
            <h4>Question <%= question[0].qno %> . <%= question[0].question.statement
              %></h4>
          </p>
        </div>
      </div>
      
        <ul class="list-group list-group-flush" style="width: 90%">
          <% for(let i = 0;i < question[0].question.correctoptions.length;i++) {
          %>
          <li
            class="list-group-item"
            id="option<%= question[0].question.correctoptions[i].optionNo %>"
            style="margin:1px;background-image: linear-gradient(to right, #633ea3, #806ca3, #633ea3);border-radius: 100px;border-color:antiquewhite;border-width: medium;color:aliceblue"
          >
            <h5><%= question[0].question.correctoptions[i].option %></h5>
          </li>
          <% } %>
        </ul>
      
      <% } else { %>
        <div
        class="card"
        style="margin-top: 20%;background-color: #280763;color:whitesmoke;border-color: antiquewhite;border-radius: 100px;border-width:thick"
      >
        <p><h3>You'll see your questions here!</h3></p>
      </div>
      <div style="height:400px; width:100%; clear:both;"></div>
      <% } %>
    </div>
    <div class="container" id="vote-section" align="center">
    <div
        class="card"
        style="margin-top: 2%;background-color: #280763;color:whitesmoke;border-color: antiquewhite;border-radius: 100px;border-width:thick"
      >
        <div class="card-body">
          <p>
            <h2>Whom do you want to vote out?</h2>
          </p>
        </div>
      </div>
      
            
            <ul class="list-group list-group-flush" style="width: 90%">
              <% for(let i = 0;i < participants.length;i++){
              if(participants[i].isRemoved || participants[i].username === "admin"
              || participants[i].username === "audience" || participants[i].username
              === participant) continue; %>
              <li class="list-group-item" id="opponent<%= participants[i].p_id %>" style="margin:1px;background-image: linear-gradient(to right, #633ea3, #806ca3, #633ea3);border-radius: 100px;border-color:antiquewhite;border-width: medium;color:aliceblue">
                <a href=""
                  ><img
                    src="/image/number/<%= participants[i].p_id %>.png"
                    alt="<%= participants[i].username %>"
                    width="50"
                    height="50"
                /></a>
              </li>
              <% } %>
            </ul>
          
      </div>
    

    <div class="toastlikemessage" style="display: none"></div>
    <script>
      $("#vote-section").hide();
      $("#unhide-vote").on("click", () => {
        $("#vote-section").show();
      });
      for (let i = 1; i <= 6; i++) {
        $("#opponent" + i).on("click", () => {
          $.post("/feed/vote/opponent/" + i, function(data, status) {
            console.log("Data: " + data + "\nStatus: " + status);
          });
          alert("You voted for team" + i);
        });
      }
      for (let i = 1; i <= 10; i++) {
        $("#option" + i).on({
          mouseenter: function() {
            $("#option" + i).css("background-image", "linear-gradient(to right, #806ca3, #633ea3, #806ca3)");
          },
          mouseleave: function() {
            $("#option" + i).css("background-image", "linear-gradient(to right, #633ea3, #806ca3, #633ea3)");
          }
        });
      }
    </script>
  </body>
</html>
